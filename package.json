{
  "name": "chunk-tokenizer",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/chunk-tokenizer.mjs",
  "exports": {
    ".": "./src/chunk-tokenizer.mjs"
  },
  "description": "Transform stream that emits tokens",
  "keywords": [
    "parser",
    "test",
    "token"
  ],
  "author": "Markus Felten <markus.felten@gmx.de>",
  "contributors": [
    "Markus Felten <markus.felten@gmx.de>",
    {
      "name": "Torsten Link",
      "email": "torstenlink@gmx.de"
    },
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/module.mjs --section=API && documentation readme ./src/chunk-tokenizer.mjs --section=API",
    "lint": "documentation lint ./src/module.mjs && documentation lint ./src/chunk-tokenizer.mjs"
  },
  "devDependencies": {
    "ava": "^3.12.1",
    "c8": "^7.3.0",
    "documentation": "^13.0.2",
    "kronos-endpoint": "^2.14.15",
    "semantic-release": "^17.1.1",
    "split": "^1.0.1"
  },
  "engines": {
    "node": ">=14.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/chunk-tokenizer.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/chunk-tokenizer/issues"
  },
  "homepage": "https://github.com/arlac77/chunk-tokenizer#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-github"
    ]
  }
}
