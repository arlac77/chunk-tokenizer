{
  "name": "chunk-tokenizer",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "src/chunk-tokenizer.mjs",
  "module": "src/chunk-tokenizer.mjs",
  "description": "Transform stream that emits tokens",
  "keywords": [
    "parser",
    "token"
  ],
  "author": "Markus Felten <markus.felten@gmx.de>",
  "contributors": [
    "Markus Felten <markus.felten@gmx.de>",
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/chunk-tokenizer.mjs --section=API",
    "lint": "documentation lint src/chunk-tokenizer.mjs",
    "posttest": "markdown-doctest && npm run prepare",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "c8": "^7.0.0",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "markdown-doctest": "^0.9.1",
    "semantic-release": "^15.14.0",
    "split": "^1.0.1"
  },
  "engines": {
    "node": ">=12.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/chunk-tokenizer.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/chunk-tokenizer/issues"
  },
  "homepage": "https://github.com/arlac77/chunk-tokenizer#readme",
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-esm-only.git"
    }
  }
}
